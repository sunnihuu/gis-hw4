{
  "version": 8,
  "name": "Protomaps Clean Light",
  "center": [-73.9857, 40.7484],
  "zoom": 11,

  "glyphs": "https://protomaps.github.io/basemaps-assets/fonts/{fontstack}/{range}.pbf",
  "sprite": "https://protomaps.github.io/basemaps-assets/sprites/v3/light",

  "sources": {
    "protomaps": {
      "type": "vector",
      "tiles": [
        "https://api.protomaps.com/tiles/v2/{z}/{x}/{y}.mvt?key=YOUR_KEY_HERE"
      ],
      "minzoom": 0,
      "maxzoom": 15
    }
  },

  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": { "background-color": "#f8f9fb" }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "protomaps",
      "source-layer": "water",
      "paint": { "fill-color": "#d4e8ff" }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "protomaps",
      "source-layer": "landuse",
      "paint": { "fill-color": "#eef2f5", "fill-opacity": 0.6 }
    },
    {
      "id": "land",
      "type": "fill",
      "source": "protomaps",
      "source-layer": "land",
      "paint": { "fill-color": "#f6f7f9" }
    },
    {
      "id": "roads-casing",
      "type": "line",
      "source": "protomaps",
      "source-layer": "roads",
      "paint": {
        "line-color": "#ffffff",
        "line-width": ["interpolate", ["linear"], ["zoom"], 5, 0.3, 12, 3.0]
      }
    },
    {
      "id": "roads",
      "type": "line",
      "source": "protomaps",
      "source-layer": "roads",
      "paint": {
        "line-color": "#c5cbd3",
        "line-width": ["interpolate", ["linear"], ["zoom"], 5, 0.2, 12, 2.5]
      }
    },
    {
      "id": "boundaries",
      "type": "line",
      "source": "protomaps",
      "source-layer": "boundaries",
      "paint": {
        "line-color": "#aeb4bd",
        "line-width": 0.7
      }
    },
    {
      "id": "places",
      "type": "symbol",
      "source": "protomaps",
      "source-layer": "places",
      "layout": {
        "text-field": "{name}",
        "text-size": ["interpolate", ["linear"], ["zoom"], 4, 10, 12, 15]
      },
      "paint": {
        "text-color": "#606673",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.0
      }
    }
  ]
}

